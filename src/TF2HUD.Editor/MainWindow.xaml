<Window x:Class="TF2HUD.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TF2HUD.Editor.Common"
        mc:Ignorable="d"
        Title="TF2 HUD Editor"
        Height="800" Width="1200"
        FontFamily="./Resources/TF2Secondary.ttf #TF2 Secondary"
        FontSize="20px">

    <Grid Background="#2B2724">
        <Label
            Name="LblStatus"
            Margin="0,10,10,0"
            HorizontalAlignment="Right"
            Content="..." />

        <local:FlawHUD x:Name="flawhud" Visibility="Visible" />
        <local:rayshud x:Name="rayshud" Visibility="Hidden" Margin="0,47,0,-47" />
        <ComboBox Name="SelectHud" Margin="10,10,0,0" Width="200" SelectionChanged="SelectHud_OnSelectionChanged">
            <ComboBoxItem IsSelected="True">FlawHUD</ComboBoxItem>
            <ComboBoxItem>rayshud</ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>