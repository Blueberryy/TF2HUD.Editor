<Window x:Class="TF2HUD.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TF2 HUD Editor"
        Width="1300"
        Height="850"
        WindowStartupLocation="CenterScreen"
        FontFamily="../Resources/TF2Secondary.ttf #TF2 Secondary"
        FontSize="20px"
        Background="#2B2724">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <GroupBox
            x:Name="GbSelectHud"
            Header="Select a HUD"
            Visibility="Visible"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Grid.Column="0" Grid.Row="0"
            Margin="10,10,10,5"
            Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- Select a HUD Listbox -->
                <ListBox x:Name="LbSelectHud" SelectionChanged="lbSelectHud_SelectionChanged" Grid.Column="0"
                         FontSize="23" Grid.Row="0" />
                <!-- TF2 HUD Editor and Version -->
                <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2">
                    <StackPanel Margin="20">
                        <Label Content="HUD Editor for Team Fortress 2" Style="{StaticResource HeaderText}"
                               Margin="0,0,0,15" />
                        <TextBlock Style="{StaticResource BodyText}" FontSize="22" TextAlignment="Center">
                            A tool for <Run Foreground="#70B04A" Text="installing" /> and
                            <Run Foreground="#38F3AB" Text="customizing" /> custom Team Fortress 2 HUDs. This project is open-source and contributions towards the code and documentation are welcomed and encouraged. For more information or help, check out the
                            <Run Foreground="#FFD700" Text="documentation" /> and the
                            <Run Foreground="#FFD700" Text="Discord server" /> linked below.
                        </TextBlock>
                        <Border Background="#A49E9E" HorizontalAlignment="Stretch" Height="1" Margin="0,15,0,15" />
                        <Label Content="Version 2.0" Style="{StaticResource HeaderText}" Margin="0,0,0,15" />
                        <TextBlock Style="{StaticResource BodyText}" FontSize="22" TextAlignment="Left">
                            - Implemented a JSON parser for creating page layouts and defining the customization options. (Thank you to Revan for creating the parser).
                            <LineBreak />
                            - Added support for budhud.
                            <LineBreak />
                            - Created documentation for this project:
                            <Run Foreground="#CF6A32" Text="https://www.editor.criticalflaw.ca" />
                            <LineBreak />
                            - Created a support Discord server:
                            <Run Foreground="#CF6A32" Text="https://discord.gg/hTdtK9vBhE" />
                            <LineBreak />
                            - Updated the page layout for flawhud and rayshud.
                            <LineBreak />
                            - User settings are now saved to AppData, so changes are carried over when updating the editor.
                            <LineBreak />
                            - Cleaned up the codebase, improved logging and developer comments.
                            <LineBreak />
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        <!-- Editor Custom Controls -->
        <Grid Name="EditorContainer">
            <!-- Content goes here -->
        </Grid>
        <!-- HUD Status -->
        <Label Name="LblStatus" Content="..." Margin="10,5,10,5" Grid.Column="0" Grid.Row="1" />
        <!-- HUD Options -->
        <GroupBox
            Header="Buttons" HorizontalAlignment="Stretch"
            Margin="10,5,10,10"
            Padding="10"
            Grid.Column="0" Grid.Row="2">
            <WrapPanel HorizontalAlignment="Center">
                <Button
                    x:Name="BtnInstall"
                    Click="BtnInstall_OnClick"
                    Content="Install"
                    Width="155"
                    Height="40"
                    Margin="5"
                    Style="{StaticResource Button}" />
                <Button
                    x:Name="BtnUninstall"
                    Click="BtnUninstall_OnClick"
                    Content="Uninstall"
                    Width="155"
                    Height="40"
                    Margin="5"
                    Style="{StaticResource Button}" />
                <Button
                    x:Name="BtnSave"
                    Click="BtnSave_OnClick"
                    Content="Apply Changes"
                    Width="155"
                    Height="40"
                    Margin="5"
                    Style="{StaticResource Button}" />
                <Button
                    x:Name="BtnReset"
                    Click="BtnReset_OnClick"
                    Content="Reset to Default"
                    Width="155"
                    Height="40"
                    Margin="5"
                    Style="{StaticResource Button}" />
                <Button
                    x:Name="BtnSwitch"
                    Click="BtnSwitch_OnClick"
                    Content="Switch HUDs"
                    Width="155"
                    Height="40"
                    Margin="5"
                    Style="{StaticResource Button}" />
                <Button
                    x:Name="BtnReportIssue"
                    Click="BtnReportIssue_OnClick"
                    Content="x"
                    Margin="5"
                    ToolTip="Report an Issue"
                    Background="#776B5F"
                    Style="{StaticResource LinkButton}" />
                <Button
                    x:Name="BtnDocumentation"
                    Click="BtnDocumentation_OnClick"
                    Content="R"
                    Margin="5"
                    ToolTip="Read the Documentation"
                    Background="#776B5F"
                    Style="{StaticResource LinkButton}" />
                <Button
                    x:Name="BtnGitHub"
                    Click="BtnGitHub_OnClick"
                    Content="Y"
                    Margin="5"
                    Background="#171a21"
                    Style="{StaticResource LinkButton}" />
                <Button
                    x:Name="BtnHuds"
                    Click="BtnHuds_OnClick"
                    Content="H"
                    Margin="5"
                    Background="#42A5F5"
                    FontFamily="../Resources/TF2Build.ttf #TF2 Build"
                    Style="{StaticResource LinkButton}" />
                <Button
                    x:Name="BtnDiscord"
                    Click="BtnDiscord_OnClick"
                    Content="Z"
                    Margin="5"
                    Background="#7289da"
                    Style="{StaticResource LinkButton}" />
                <Button
                    x:Name="BtnSteam"
                    Click="BtnSteam_OnClick"
                    Content="X"
                    Margin="5"
                    Background="#1B2838"
                    Style="{StaticResource LinkButton}" />
            </WrapPanel>
        </GroupBox>
    </Grid>
</Window>