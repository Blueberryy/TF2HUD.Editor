{
  "title": "TF2 HUD Editor Shared JSON Schema",
  "properties": {
    "HUDS": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string"
          },
          "Description": {
            "type": "string"
          },
          "Author": {
            "type": "string"
          },
          "Thumbnail": {
            "type": "string",
            "pattern": "^https?:\/\/.*$"
          },
          "Links": {
            "type": "object",
            "items": {
              "properties": {
                "Download": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "Source": {
                        "type": "string"
                      },
                      "Link": {
                        "type": "string",
                        "pattern": "^https?:\/\/.*$"
                      }
                    },
                    "required": [
                      "Source",
                      "Link"
                    ]
                  }
                },
                "GitHub": {
                  "type": "string",
                  "pattern": "^https?:\/\/.*$"
                },
                "HudsTF": {
                  "type": "string",
                  "pattern": "^https?:\/\/.*$"
                },
                "Steam": {
                  "type": "string",
                  "pattern": "^https?:\/\/.*$"
                }
              }
            }
          },
          "Screenshots": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^https?:\/\/.*$"
            }
          }
        },
        "required": [
          "Name",
          "Description",
          "Author",
          "Thumbnail",
          "Links",
          "Screenshots"
        ]
      }
    }
  },
  "required": [
    "HUDS"
  ]
}