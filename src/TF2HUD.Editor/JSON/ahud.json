  "Layout": [
    "0 1 2",
    "3 1 2"
  ],
  "Controls": {
    "Options": [
      {
        "Name": "custom_background",
        "Label": "Custom Background",
        "Type": "CustomBackground",
        "Special": "CustomBackground",
        "ToolTip": "Replace the main menu background with a custom image.",
        "Restart": true
      },
      {
        "Name": "chat_top_left",
        "Label": "Chat To Top Left",
        "Type": "Checkbox",
        "ToolTip": "Move the in game chat to the top left of the screen",
        "Value": false,
        "Restart": false,
        "Files": {
          "resource/ui/basechat.res": {
            "HudChat": {
              "ypos": {
                "true": "0",
                "false": "275"
              }
            }
          }
        }
      },
      {
        "Name": "val_killfeed_rows",
        "Label": "Killfeed Rows",
        "Type": "IntegerUpDown",
        "ToolTip": "Change the number of rows seen on the killfeed.",
        "Value": "5",
        "Minimum": "0",
        "Increment": "1",
        "Files": {
          "scripts/hudlayout.res": {
            "HudDeathNotice": {
              "MaxDeathNotices": "$value"
            }
          }
        }
      }
    ],
