        "Value": "18",
        "Minimum": "10",
        "Maximum": "30",
        "Increment": "1",
        "ToolTip": "Size of the crosshair.",
        "Files": {
          "scripts/hudlayout.res": {
            "CustomCrosshair": {
              "font": "Size:$value"
            }
          }
