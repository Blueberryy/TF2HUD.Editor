      {
        "Name": "tf2_toggle_xhair_enable",
        "Label": "Enable the Crosshair",
        "Type": "Checkbox",
        "ToolTip": "Toggle crosshair feature.",
        "Value": "false",
        "Files": {
          "scripts/hudlayout.res": {
            "CustomCrosshair": {
              "visible": {
                "true": "1",
                "false": "0"
              },
              "enabled": {
                "true": "1",
                "false": "0"
              }
            }
          }
        }
      },
      {
        "Name": "tf2_toggle_xhair_pulse",
        "Label": "Toggle Hitmarker",
        "Type": "Checkbox",
        "ToolTip": "Toggle hitmarker animation.",
        "Value": "true",
        "Files": {
          "scripts/hudanimations_custom.txt": {
            "uncomment": [
              "Animate CustomCrosshair"
            ]
          }
        }
      },
