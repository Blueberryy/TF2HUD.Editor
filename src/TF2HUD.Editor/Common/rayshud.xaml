                                  Content="6" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="7" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="8" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="9" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content=":" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content=";" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="&lt;" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="=" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content=">" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="?" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="@" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="A" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="B" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="C" />
