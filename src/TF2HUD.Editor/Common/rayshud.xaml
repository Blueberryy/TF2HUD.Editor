                                  Content="W" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="X" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="Y" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="Z" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="[" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="\" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="]" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="^" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="_" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="`" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="a" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="b" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="c" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="d" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
