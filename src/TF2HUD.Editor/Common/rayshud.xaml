                                  Content="m" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="n" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="o" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="p" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="q" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="r" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="s" />
