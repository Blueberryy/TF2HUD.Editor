                                  Content="J" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="K" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="L" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="M" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="N" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="O" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="P" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="Q" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="R" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="S" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="T" />
