                                  Content="s" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="t" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="u" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="v" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="w" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="x" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="y" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="z" />
