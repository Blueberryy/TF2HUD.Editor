<UserControl x:Class="TF2HUD.Editor.HUDs.FlawHUD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x2="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             Height="640" Width="1280"
             FontFamily="../Resources/TF2Secondary.ttf #TF2 Secondary"
             FontSize="20px">

    <Grid>

        <GroupBox
            Width="430"
            Height="460"
            Margin="10,10,0,0"
            Header="Colors">
            <Grid>
                <Label
                    Margin="10,10,0,0"
                    Content="Health Style:"
                    ToolTip="Select the style of the health display." />

                <ComboBox
                    x:Name="CbHealthStyle"
                    Margin="200,10,0,0">
                    <ComboBoxItem>Default</ComboBoxItem>
                    <ComboBoxItem>Colored Text</ComboBoxItem>
                    <ComboBoxItem>Cross</ComboBoxItem>
                </ComboBox>

                <x2:ColorPicker
                    x:Name="CpHealthBuffed"
                    Margin="200,60,0,0" />

                <Label
                    Margin="10,60,0,0"
                    Content="Buffed Health:"
                    ToolTip="Color of the player's health when buffed." />

                <x2:ColorPicker
                    x:Name="CpHealthLow"
                    Margin="200,110,0,0" />

                <Label
                    Margin="10,110,0,0"
                    Content="Low Health:"
                    ToolTip="Color of the player's health when low." />

                <x2:ColorPicker
                    x:Name="CpAmmoLow"
                    Margin="200,160,0,0" />

                <Label
                    Margin="10,160,0,0"
                    Content="Low Ammo:"
                    ToolTip="Color of the player's ammo when low." />

                <x2:ColorPicker
                    x:Name="CpUberBarColor"
                    Margin="200,210,0,0" />

                <Label
                    Margin="10,210,0,0"
                    Content="Uber Charging:"
                    ToolTip="Color of the ÜberCharge meter while charging." />

                <x2:ColorPicker
                    x:Name="CpUberFullColor"
                    Margin="200,260,0,0" />

                <Label
                    Margin="10,260,0,0"
                    Content="Uber Charged:"
                    ToolTip="Color of the ÜberCharge meter when charged." />

                <x2:ColorPicker
                    x:Name="CpTargetHealth"
                    Margin="200,310,0,0" />

                <Label
                    Margin="10,310,0,0"
                    Content="Target Health:"
                    ToolTip="Color of the health amount healed. Requires a game restart." />

                <x2:ColorPicker
                    x:Name="CpTargetDamage"
                    Margin="200,360,0,0" />

                <Label
                    Margin="10,360,0,0"
                    Content="Target Damage:"
                    ToolTip="Color of the damage dealt to another player. Requires a game restart." />
            </Grid>
        </GroupBox>

        <GroupBox
            Width="430"
            Height="155"
            Margin="10,475,0,0"
            Header="Social Media"
            Visibility="Hidden">
            <Grid>
                <Button x:Name="btnHudsTF" Width="75" Height="75" Click="btnHudsTF_Click"
                        Style="{StaticResource TransparentStyle}" Margin="130,0,0,0">
                    <Image Source="../Resources/hudstf.png" Margin="0,0,0,0" />
                </Button>
                <Button x:Name="btnSteam" Width="75" Height="75" Click="btnSteam_Click"
                        Style="{StaticResource TransparentStyle}" Margin="320,0,0,0">
                    <Image Source="../Resources/steam.png" Margin="0,0,0,0" />
                </Button>
            </Grid>
        </GroupBox>

        <GroupBox
            Width="430"
            Height="300"
            Margin="450,10,0,0"
            Header="Crosshair">

            <Grid>
                <x2:ColorPicker
                    x:Name="CpXHairColor"
                    Width="100"
                    Margin="200,60,0,0"
                    IsEnabled="False" />

                <x2:ColorPicker
                    x:Name="CpXHairPulse"
                    Width="100"
                    Margin="300,60,0,0"
                    IsEnabled="False" />

                <Label
                    Margin="10,60,0,0"
                    Content="Base Colors:"
                    ToolTip="Default crosshair color." />

                <x2:IntegerUpDown
                    x:Name="IntXHairSize"
                    Margin="200,110,0,0"
                    Value="18"
                    Minimum="10"
                    Maximum="30" Height="28"
                    TextAlignment="Center"
                    IsEnabled="False" />

                <Label
                    Margin="10,110,0,0"
                    Content="Crosshair Size:"
                    ToolTip="Size of the crosshair." />

                <Label
                    Margin="10,210,0,0"
                    Content="Crosshair Style:"
                    ToolTip="Size of the crosshair." />

                <ComboBox
                    Name="CbXHairStyle"
                    Margin="200,210,0,0"
                    Style="{StaticResource CrosshairBox}"
                    IsEnabled="False">

                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="!" />
                    <ComboBoxItem Style="{StaticResource Crosshair}"
                                  Content="#" />
